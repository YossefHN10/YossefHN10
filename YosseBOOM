<body>
    <h1>לא תצליח להימלט!</h1>
    <div class="container">
        <button class="fake-button" onclick="startPrank()">לחץ כאן</button>
        <button class="fake-button" onclick="closeFake()">צא מכאן</button>
    </div>
    <div class="alert-popup" id="popup">
        <h2>חחחחח!</h2>
        <p>אמרתי לך שלא תצליח לברוח...</p>
    </div>
    <audio id="funnySound" src="https://www.myinstants.com/media/sounds/troll-trollololololololol.mp3"></audio>
    <script>
        function startPrank() {
            const audio = document.getElementById('funnySound');
            audio.play();

            // הוספת קונפטי במסך
            for (let i = 0; i < 100; i++) {
                const confetti = document.createElement('div');
                confetti.classList.add('confetti');
                confetti.style.left = `${Math.random() * 100}vw`;
                confetti.style.animationDuration = `${Math.random() * 3 + 2}s`;
                document.body.appendChild(confetti);

                setTimeout(() => confetti.remove(), 5000);
            }

            // לולאת הודעות
            let counter = 0;
            const interval = setInterval(() => {
                alert("חחח, עוד פעם?");
                counter++;
                if (counter > 3) {
                    clearInterval(interval);
                    document.getElementById('popup').style.display = 'block';
                }
            }, 1000);
        }

        function closeFake() {
            alert("ממש חשבת שתוכל לברוח? נסה שוב!");
        }
    </script>
